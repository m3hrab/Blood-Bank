ScreenManager:
    LoginScreen:
    SignupScreen:
    AppScreen:

<LoginScreen>:

    MDFloatLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 30

        Image:
            source: "blood.png"
            pos_hint:{'center_x':.5, 'center_y':.8}

        MDTextField:
            id: email
            hint_text: "Email"
            icon_left: "email"
            pos_hint: {'center_x':.5, 'center_y':.5}
            size_hint:(.8,None)

        MDTextField:
            icon_left: "lock"
            id: password
            hint_text: "Password"
            password: True
            pos_hint: {'center_x':.5, 'center_y':.4}
            size_hint:(.8,None)

        MDFillRoundFlatButton:
            text: "Login"
            pos_hint: {'center_x':.5, 'center_y':.3}
            size_hint:(.8, None)
            md_bg_color: 255/255, 99/255, 71/255, 1
            # on_press: app.login()  

        MDLabel:
            text: "Don't have account"
            pos_hint: {'center_x':.5, 'center_y':.18}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 80/255, 60/255, 59/255, .8
                
        MDTextButton:
            text:"Create Account"
            bold: True
            pos_hint: {'center_x':.5, 'center_y':.15}
            theme_text_color: "Custom"
            text_color: 58/255, 134/255, 255/255, 1
            on_press: root.manager.current = 'signup'
            

<SignupScreen>:
    # name = 'signup'
    MDFloatLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 30

        Image:
            source: "blood.png"
            pos_hint:{'center_x':.5, 'center_y':.8}
            size_hint:(.8,.8)

        MDTextField:
            hint_text: "Name"
            fill_color: 0, 0, 0, .4
            pos_hint: {'center_x':.5, 'center_y':.6}
            size_hint:(.8,None)

        MDTextField:
            hint_text: "Phone Number"
            fill_color: 0, 0, 0, .4
            pos_hint: {'center_x':.5, 'center_y':.5}
            size_hint:(.8,None)

        MDTextField:
            hint_text: "Address"
            fill_color: 0, 0, 0, .4
            pos_hint: {'center_x':.5, 'center_y':.4}
            size_hint:(.8,None)

        MDTextField:
            hint_text: "Blood Group"
            fill_color: 0, 0, 0, .4
            pos_hint: {'center_x':.5, 'center_y':.3}
            size_hint:(.8,None)

        # MDCheckbox:
        #     pos_hint: {'center_x':.13, 'center_y':.2}

        # MDLabel:
        #     hint_text: "I agree with terms and conditions" 
        #     pos_hint: {'center_x':.2, 'center_y':.2}
        #     halign:"center"
        #     theme_text_color: "Custom"
        #     text_color: (0,0,1,1)


        MDFillRoundFlatButton:
            text: "Register"
            pos_hint: {'center_x':.5, 'center_y':.1}
            on_press: root.manager.current = "app"


