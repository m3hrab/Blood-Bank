ScreenManager:
    LoginScreen:
    SignupScreen:
    AppScreen:

<LoginScreen>:
    name:"login"
    email: email
    password: password
    MDFloatLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 30

        Image:
            source: "images/blood.png"
            pos_hint:{'center_x':.5, 'center_y':.75}

        MDTextField:
            id: email
            hint_text: "Email"
            icon_left: "email"
            pos_hint: {'center_x':.5, 'center_y':.5}
            size_hint:(.8,None)

        MDTextField:
            icon_left: "lock"
            id: password
            hint_text: "Password"
            password: True
            pos_hint: {'center_x':.5, 'center_y':.4}
            size_hint:(.8,None)

        MDFillRoundFlatButton:
            text: "Login"
            pos_hint: {'center_x':.5, 'center_y':.3}
            size_hint:(.8, None)
            md_bg_color: 255/255, 99/255, 71/255, 1
            on_press: root.validation()

        MDLabel:
            text: "Don't have account"
            pos_hint: {'center_x':.5, 'center_y':.18}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 80/255, 60/255, 59/255, .8
                
        MDTextButton:
            text:"Create Account"
            bold: True
            pos_hint: {'center_x':.5, 'center_y':.15}
            theme_text_color: "Custom"
            text_color: 58/255, 134/255, 255/255, 1
            on_press: root.manager.current = 'signup'
            

<SignupScreen>:
    name:"signup"
    username: username
    email: email
    phone: phone 
    address:address
    bg: bg
    password: password
    MDFloatLayout:
        orientation: 'vertical'
        spacing: 5
        padding: 30

        # MDTopAppBar:
        #     title: "Connect By Blood"
        #     type_height: "small"
        #     pos_hint: {'center_x':.5, 'center_y':.97}
        Image:
            source: "images/blood.png"
            pos_hint:{'center_x':.5, 'center_y':.8}
            size_hint:(.8,.8)

        MDTextField:
            id: username
            hint_text: "Name"
            icon_left: "account"
            pos_hint: {'center_x':.5, 'center_y':.55}
            size_hint:(.8,None)

        MDTextField:
            id: email
            hint_text: "Email"
            icon_left: "email"
            pos_hint: {'center_x':.5, 'center_y':.48}
            size_hint:(.8,None)

        MDTextField:
            id: phone
            hint_text: "Phone Number"
            icon_left: "phone"
            pos_hint: {'center_x':.5, 'center_y':.41}
            size_hint:(.8,None)

        MDTextField:
            id: address
            hint_text: "Address"
            icon_left: "google-maps"
            pos_hint: {'center_x':.5, 'center_y':.34}
            size_hint:(.8,None)

        MDTextField:
            id: bg
            hint_text: "Blood Group"
            icon_left: "water"
            pos_hint: {'center_x':.5, 'center_y':.27}
            size_hint:(.8,None)

        MDTextField:
            id:password
            hint_text: "password"
            icon_left: "lock"
            pos_hint: {'center_x':.5, 'center_y':.2}
            size_hint:(.8,None)


        MDFillRoundFlatButton:
            text: "Register"
            pos_hint: {'center_x':.5, 'center_y':.1}
            size_hint:(.8,None)
            on_press: 
                root.registerbtn()
            # on_press: app.login()

